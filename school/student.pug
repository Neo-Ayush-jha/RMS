doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title RMS 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css")
    body    
        .navbar.navbar-expand-lg.navbar-dark.bg-dark 
            .container 
                a.navbar-brand(href="") cws SCHOOL 
        .container 
            .row 
                .col-3 
                    .card 
                        .card-body 
                            form(action="/insert" method="post")
                                .mb-3 
                                    label(for="") Name 
                                    input.form-control(type="text" name="name") 
                                .mb-3 
                                    label(for="") Phone 
                                    input.form-control(type="number" name="phone") 
                                .mb-3 
                                    label(for="") Email 
                                    input.form-control(type="email" name="email") 
                                .mb-3 
                                    label(for="") Maths 
                                    input.form-control(type="number" name="maths") 
                                .mb-3 
                                    label(for="") Science 
                                    input.form-control(type="number" name="sci") 
                                .mb-3 
                                    label(for="") SSt 
                                    input.form-control(type="number" name="sst") 
                                .mb-3 
                                    label(for="") English 
                                    input.form-control(type="number" name="eng") 
                                .mb-3 
                                    label(for="") Hindi 
                                    input.form-control(type="number" name="hindi") 
                                .mb-3 
                                    input.btn.btn-success(type="submit" name="submit") 
                .col-lg-9.sm-12 
                    .card 
                        .card-body 
                            table.table 
                                tr  
                                    th ID
                                    th NAME
                                    th PHONE
                                    th EMAIL
                                    th TOTAL
                                    th ACTION
                                each z in data 
                                    tr 
                                        td=z._id
                                        td=z.name
                                        td=z.phone
                                        td=z.email
                                        td=z.maths+z.sci+z.sst+z.eng+z.hindi
                                        td.d-flex
                                            form(action="/deleteRecord", method="post") 
                                                input(type="hidden" ,name="_id",value=`${z._id}`)
                                                input(type="submit" , name="send",value="delete").btn.btn-success
                                            a.btn.btn-info(href=`${"/edit/"+z._id}`) Edit 